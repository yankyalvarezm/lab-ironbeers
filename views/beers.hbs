<h1> Beers </h1>
<div class="beer-main">
    {{#each beersFromApi}}


    <div class="beer-all">
        <div class="beer-image">
            <img src={{image_url}} alt={{name}} />
        </div>

        <div class="beer-content">

            <h2>{{name}}</h2>
            <h2>{{tagline}}</h2>
            <p>{{description}}</p>
        </div>

    </div>

    {{/each}}
</div>